<style type="text/css">
body {
  margin: 0;
}
</style>
<img src="/uploads/tickets/{{url}}" style="width: 100%;">
<script type="text/javascript">
var tit = "流量话费俱乐部"; //标题
var img = "http://{{hostname}}/uploads/tickets/{{url}}"; //图片
var con = "流量话费俱乐部专注流量服务与资讯的平台 {{customer.username}}专属二维码"; //简介
var link = window.location.href; //链接
document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
// 发送给好友
WeixinJSBridge.on('menu:share:appmessage', function (argv) {
WeixinJSBridge.invoke('sendAppMessage', {
"appid": "wxa2240e935f538c84",
"img_url": img,
"img_width": "160",
"img_height": "160",
"link": link,
"desc": con,
"title": tit
}, function (res) {
_report('send_msg', res.err_msg);
})
});

// 分享到朋友圈
WeixinJSBridge.on('menu:share:timeline', function (argv) {
WeixinJSBridge.invoke('shareTimeline', {
"img_url": img,
"img_width": "160",
"img_height": "160",
"link": link,
"desc": con,
"title": tit
}, function (res) {
_report('timeline', res.err_msg);
});
});
}, false)
</script>