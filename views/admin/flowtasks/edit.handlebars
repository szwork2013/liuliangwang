{{> "flowtasks/form" action=path method="POST" }}


{{#section 'javascript'}}
    <script type="text/javascript">
    $(document).ready(function(){

      $('#expired_at').datepicker({
        startDate: new Date(),
        format: "yyyy-mm-dd"
      });
      KindEditor.ready(function(K) {
          return K.create("#content", {
              "class": ["kindeditor", "optional"],
              width: "100%",
              height: 300,
              allowFileManager: true,
              uploadJson: '/admin/kindeditor/uploads',
              fileManagerJson: '/admin/kindeditor/filemanager'
          });
      });
    })
  </script>
{{/section}}