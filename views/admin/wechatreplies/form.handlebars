<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">微信回复</h1>
      </div>
  </div>


<form role="form" accept-charset="UTF-8" action="{{path}}" method="{{method}}">
  <div class='row'>
    <div class="col-lg-6">
      <div class="form-group">
        <label>关键字</label>
        <input class="form-control" placeholder="input key" name="key" value="{{ reply.key }}">
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <div class="checkbox" style="padding-top: 20px;">
          <label>
              <input type="checkbox" name="isActive" {{ isChecked reply.isActive  }} >显示
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class="col-lg-10">
      <textarea class="form-control" id="content" name="content" rows="3">{{reply.content}}</textarea>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-11">
      <button type="submit" class="pull-right btn btn-primary">提  交</button>
    </div>
  </div>

</form>

</div>