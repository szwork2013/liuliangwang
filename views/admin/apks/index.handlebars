<div class="row">
  <div class='col-lg-2 pull-right'>
    <a href="/admin/apks/new">
      <button class="btn btn-primary col-lg-12 btn-large">
        <i class="glyphicon glyphicon-plus"></i> 新建
      </button>
    </a>
  </div>
</div>
<hr>
<div class="row">
  <form role="form" accept-charset="UTF-8" action="/admin/apks" method="GET">
    <div class="col-lg-4">
      <div class="form-group">
        <label>名称</label>
        <input class="form-control" placeholder="input name" name="name" value="{{ query.name }}">
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <label>商家</label>
        {{ selectTag sellerOptions sellerCollection query.sellerId }}
      </div>
    </div>
    <div class="col-lg-4" style="padding-top: 19px;">
      <div class="form-group">
        <button type='submit' class="btn btn-info col-lg-8 pull-right">搜索</button>
      </div>
    </div>
  </form>
</div>
<hr>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          Apks
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                  <th>名称</th>
                  <th>商家</th>
                  <th>大小</th>
                  <th>下载次数</th>
                  <th>显示</th>
                  <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each apks.rows}}
                <tr>
                  <td>{{ name }}</td>
                  <td>{{ seller.name }}</td>
                  <td>{{ sizeFormat apkSize }}</td>
                  <td>{{ downloadTime }}</td>
                  <td>{{ isActive }}</td>
                  <td>
                    <a href="/admin/apks/{{id}}/edit" class="list-group-item col-xs-6">
                      <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                    <a href="/admin/apk/{{id}}/delete" class="list-group-item col-xs-6" onclick="return confirm('你确定要删除吗？')">
                      <i class="glyphicon glyphicon-trash"></i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
      <div class="panel-footer">
          {{pagination apks (addParams '/admin/apks' query)}}
      </div>
    </div>
      <!-- /.panel -->
  </div>
</div>