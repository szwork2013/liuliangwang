<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">提现申请  状态  {{ withdrawalStatus withdrawal.state STATUS }}</h1>
      </div>
  </div>

  <div class='row'>
    <div class="col-lg-6">
      <div class="form-group">
          <label>用户</label>
          <input class="form-control" placeholder="input title" name="name" value="{{ withdrawal.customer.username }}">
      </div>
      <div class='row'>
        <div class="col-lg-6">
          <div class="form-group">
              <label>真实姓名</label>
              <input class="form-control" placeholder="input version" name="version" value="{{ withdrawal.name }}">
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <label>手机号码</label>
            <input class="form-control" placeholder="input version" name="version" value="{{ withdrawal.phone }}">
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <label>提现金额  可提取金额 </label>
        <input class="form-control" placeholder="input version" name="version" value="{{ withdrawal.amount }}">
      </div>
      <div class="form-group">
        <label>备注</label>
        <textarea class="form-control" id="remark" name="remark" rows="3">{{withdrawal.remark}}</textarea>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div style="margin-top: 120px"></div>
      <form role="form" accept-charset="UTF-8" action="/admin/withdrawals/{{withdrawal.id}}/apply" method="POST">
        {{#if allowEdit }}<button type="submit" class="pull-right btn btn-primary">提现受理</button> {{/if}}
      </form>
    </div>
    <div class="col-lg-6">
      <form role="form" accept-charset="UTF-8" action="/admin/withdrawals/{{withdrawal.id}}/reject" method="POST">
        <div class="form-group">
        <label>拒绝理由</label>
          <textarea class="form-control" id="comment" name="comment" rows="3">{{withdrawal.comment}}</textarea>
        </div>
        {{#if allowEdit }}<button type="submit" class="pull-right btn btn-primary">拒绝</button> {{/if}}
      </form>
    </div>
  </div>

</div>
