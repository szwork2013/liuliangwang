<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">短信模板</h1>
      </div>
  </div>


<form role="form" accept-charset="UTF-8" action="{{path}}" method="POST">
  <div class='row'>
    <div class="col-lg-8">
      <div class="form-group">
        <label>名字</label>
        <input class="form-control" placeholder="input name" name="name" value="{{ messagetemplate.name }}">
      </div>
      <div class="form-group">
        <label>内容</label>
        <textarea class="form-control" id="content" name="content" rows="3">{{messagetemplate.content}}</textarea>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-11">
      <button type="submit" class="pull-right btn btn-primary">提  交</button>
    </div>
  </div>

</form>

</div>