<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">话费套餐</h1>
      </div>
  </div>


<form role="form" accept-charset="UTF-8" action="{{path}}" method="{{method}}">
  <div class='row'>
    <div class="col-lg-6">
      <div class="form-group">
        <label>名字</label>
        <input class="form-control" placeholder="input name" name="name" value="{{ trafficPlan.name }}">
      </div>
      <div class="form-group">
        <label>花费</label>
        <input class="form-control" placeholder="input cost" name="cost" type='text' value="{{ trafficPlan.cost }}">
      </div>
      <div class="form-group">
        <label>排序</label>
        <input class="form-control" placeholder="input sortNum" name="sortNum" type='number' min="0" step='1' value="{{ trafficPlan.sortNum }}">
      </div>
      <div class="form-group">
        <label>提供商</label>
        {{ selectTag providerOptions providerCollection trafficPlan.providerId }}
      </div>
      <div class="form-group">
        <label>积分</label>
        <input class="form-control" placeholder="输入积分" name="integral" type='number' min="0" step='1' value="{{ trafficPlan.integral }}">
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <label>话费</label>
        <input class="form-control" placeholder="input value" name="value" type='number' min="0" step='1' value="{{ trafficPlan.value }}">
      </div>
      <div class="form-group">
        <div class="checkbox" style="padding-top: 20px;">
          <label>
              <input type="checkbox" name="display" {{ isChecked trafficPlan.display  }} >显示
          </label>
        </div>
      </div>
      <div class="form-group">
        <label>进货价</label>
        <input class="form-control" placeholder="input purchase price" name="purchasePrice" type='text' value="{{ trafficPlan.purchasePrice }}">
      </div>
      <div class="form-group">
        <label>分组</label>
        {{ selectTag trafficgroupsOptions trafficgroupsCollection trafficPlan.trafficGroupId }}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-11">
      <button type="submit" class="pull-right btn btn-primary">提  交</button>
    </div>
  </div>

</form>

</div>