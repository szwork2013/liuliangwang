<div class='container-fluid'>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">套餐分组</h1>
        </div>
    </div>

    <form role="form" accept-charset="UTF-8" action="{{path}}" method="{{method}}">
        <div class='row'>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>名字</label>
                    <input class="form-control" placeholder="input name" name="name" value="{{ trafficgroup.name }}">
                </div>
                <div class="form-group">
                    <label>provider</label>
                    {{ selectTag providerOptions providerCollection trafficgroup.providerId }}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>排序</label>
                    <input class="form-control" placeholder="input sortNum" name="sortNum" type='number' min="0"
                           step='1' value="{{ trafficgroup.sortNum }}">
                </div>
                <div class="form-group">
                    <div class="checkbox" style="padding-top: 20px;">
                        <label>
                            <input type="checkbox" name="display" {{ isChecked trafficgroup.display  }} >显示
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-11">
                <div class="form-group">
                    <label>详情</label>
                    <textarea rows="20"  class="form-control"  name="info" cols="27" onscroll="this.rows++;">{{ trafficgroup.info  }}</textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-11">
                <button type="submit" class="pull-right btn btn-primary">提 交</button>
            </div>
        </div>
    </form>
</div>