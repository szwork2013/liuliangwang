<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">用户等级</h1>
      </div>
  </div>

<form role="form" accept-charset="UTF-8" action="{{path}}" method="{{method}}">
  <div class='row'>
    <div class="col-lg-6">
      <div class="form-group">
          <label>名字</label>
          <input class="form-control" placeholder="input name" name="name" value="{{ level.name }}">
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <label>折扣</label>
        <input class="form-control" placeholder="input discount" name="discount" type='number'  min="0" step='0.01' value="{{ level.discount }}">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-11">
      <button type="submit" class="pull-right btn btn-primary">提  交</button>
    </div>
  </div>

</form>

</div>